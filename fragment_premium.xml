<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
android:background="@drawable/background">

    <Button android:layout_width="150dp"
               android:id="@+id/btn_1"
               android:layout_height="50dp"
               android:background="@drawable/rounded_bu"
               android:layout_marginTop="50dp"
            android:layout_marginStart="10dp"
            android:text="@string/pre1"
            android:textColor="@color/black"
/>
    <Button android:layout_width="150dp"
            android:id="@+id/btn_2"
            android:layout_height="50dp"
            android:background="@drawable/rounded_bu"
            android:layout_marginTop="50dp"
            android:text="@string/pre2"
            android:layout_marginLeft="230dp"
            android:textColor="@color/black"
    />
    <Button android:layout_width="150dp"
            android:id="@+id/btn_3"
            android:layout_height="50dp"
            android:background="@drawable/rounded_bu"
            android:layout_below="@id/btn_1"
            android:text="@string/pre3"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
    />
    <Button android:layout_width="150dp"
            android:id="@+id/btn_4"
            android:layout_height="50dp"
            android:background="@drawable/rounded_bu"
            android:layout_below="@id/btn_2"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="230dp"
            android:text="@string/pre4"
            android:textColor="@color/black"
    />
    <Button android:layout_width="150dp"
            android:id="@+id/btn_5"
            android:layout_height="50dp"
            android:layout_below="@id/btn_3"
            android:background="@drawable/rounded_bu"
            android:text="@string/pre5"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
    />
    <Button android:layout_width="150dp"
            android:id="@+id/btn_6"
            android:layout_height="50dp"
            android:layout_below="@id/btn_4"
            android:background="@drawable/rounded_bu"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="230dp"
            android:textColor="@color/black"
            android:text="@string/pre6"
    />
    <Button android:layout_width="150dp"
            android:id="@+id/btn_7"
            android:layout_height="50dp"
            android:layout_below="@id/btn_5"
            android:background="@drawable/rounded_bu"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:text="@string/pre7"
    />
    <Button android:layout_width="150dp"
            android:id="@+id/btn_8"
            android:layout_height="50dp"
            android:layout_below="@id/btn_6"
            android:background="@drawable/rounded_bu"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="230dp"
            android:textColor="@color/black"
            android:text="@string/pre8"
    />
    <Button android:layout_width="150dp"
            android:id="@+id/btn_9"
            android:layout_below="@id/btn_7"
            android:layout_height="50dp"
            android:background="@drawable/rounded_bu"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:text="@string/pre9"
    />
    <Button android:layout_width="150dp"
            android:id="@+id/btn_10"
            android:layout_below="@id/btn_8"
            android:layout_height="50dp"
            android:background="@drawable/rounded_bu"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="230dp"
            android:textColor="@color/black"
            android:text="@string/pre10"
    />


</RelativeLayout>
